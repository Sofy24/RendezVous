<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="130dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

<!--    app:datePicker="true"-->

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:abbreviationsBarColor="@color/brillantBlue"
        app:abbreviationsLabelsColor="@color/white"
        app:anotherMonthsDaysLabelsColor="#645E5E"
        app:daysLabelsColor="@color/black"
        app:headerColor="@color/colorPrimaryVariant"
        app:pagesColor="@color/pastelLightBlue"
        app:selectionColor="@color/colorPrimaryVariant" />

    <TextView
        android:id="@+id/event_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="1dp"
        android:textAlignment="center"
        android:textColor="@color/white" />


</FrameLayout>